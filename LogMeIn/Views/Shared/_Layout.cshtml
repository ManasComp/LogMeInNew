@using LogMeIn.Utility
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - LogMeIn</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/LogMeIn.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">
    <link rel="stylesheet" href="//cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap5-toggle@5.0.4/css/bootstrap5-toggle.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">

    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css"/>
    <link rel="stylesheet" href="https://cdn.datatables.net/rowgroup/1.4.0/css/rowGroup.dataTables.min.css"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3 bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ZaregistrujMě</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="Visitor" asp-controller="Home" asp-action="Index">Domů</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="Visitor" asp-controller="ExhibitionHome" asp-action="Index">Výstava</a>
                    </li>
                    @if (User.IsInRole(Roles.RoleAdmin.ToString()))
                    {
                        <div class="dropdown">
                            <button class="nav-link text-dark" data-bs-toggle="dropdown" aria-expanded="false" style="transition: none; animation: none;">
                                Administrace
                            </button>
                            <ul class="dropdown-menu">
                                <li class="nav-item">
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="Registration" asp-action="Index">Registrace</a>
                                </li>
                            </ul>
                        </div>
                    }
                    <li class="bg-black">
                        <div>
                            <li class="nav-item d-lg-none">
                                <partial name="_LoginPartial" class="d-none d-lg-block"/>
                            </li>
                        </div>
                    </li>

                </ul>
            </div>

        </div>
        <div class="d-none d-lg-block">
            <partial name="_LoginPartial" class="d-none d-lg-block"/>
        </div>
    </nav>
</header>
<div class="container">
    <partial name="_CookieConsentPartial"/>
    <main role="main" class="pb-3">
        <partial name="_NotifficationPartial"/>
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2023 - LogMeIn - <a asp-area="Visitor" asp-controller="Home" asp-action="Privacy">Osobní údaje</a>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="//cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js" asp-append-version="true"></script>
<script src="https://cdn.tiny.cloud/1/t0nm64o9vkkl73x3cg2eq2m9q7fr10wa3y1k9n2tevfpv5e6/tinymce/6/tinymce.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap5-toggle@5.0.4/js/bootstrap5-toggle.ecmas.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
<script src="https://npmcdn.com/flatpickr/dist/flatpickr.min.js"></script>
@* $1$ <script src="https://npmcdn.com/flatpickr/dist/l10n/cz.js"></script> #1# TODO: add czech language *@

@* <script src="https://code.jquery.com/jquery-3.7.0.js"></script> *@
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

@await RenderSectionAsync("Scripts", false)

</body>
</html>